<Page x:Class="Front.CentrosMedicos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CentrosMedicos">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="TxtBl1" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#624695"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        </Style>

        <Style x:Key="TxtBl2" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        </Style>

        <Style x:Key="BotonAgrandable" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0D1B40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.12" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.12" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#123066" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#0D1B40" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Content" Value="CENTROS MÉDICOS"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
        </Style>

        <Style x:Key="ToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="CategoriaItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#072A4C"/>
        </Style>
    </Page.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="80" Margin="0,0,0,16" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Style="{StaticResource LabelStyle}" Grid.Column="1" HorizontalAlignment="Center"/>
            <Button Grid.Column="2" Content="Volver" x:Name="BtnVolver"
                    Style="{StaticResource BotonAgrandable}" Width="120" Height="40"
                    HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,25,30,0"
                    Click="BtnVolver_Click"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="60,6,0,6">
            <ToggleButton x:Name="Toggle" Style="{StaticResource ToggleStyle}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Categorías"/>
                    <TextBlock Text="  ▾" Margin="6,0,0,0"/>
                </StackPanel>
            </ToggleButton>

            <Popup IsOpen="{Binding IsChecked, ElementName=Toggle}"
                   PlacementTarget="{Binding ElementName=Toggle}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   HorizontalOffset="0"
                   VerticalOffset="6">

                <Border Background="White" CornerRadius="8" Padding="6" BorderBrush="#E0E0E0" BorderThickness="1">
                    <ListBox x:Name="ListaCategorias"
                             DisplayMemberPath="."
                             BorderThickness="0"
                             Background="White"
                             SelectionMode="Single"
                             ItemContainerStyle="{StaticResource CategoriaItemStyle}"/>
                </Border>
            </Popup>
        </StackPanel>

        <ScrollViewer Grid.Row="2" Margin="60,18,60,24" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Border Background="#EFE8F6" Padding="16" BorderThickness="0" CornerRadius="8">
                    <StackPanel Orientation="Vertical">

                        <Grid Margin="4" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Institución" Style="{StaticResource TxtBl1}"/>
                            <TextBlock Grid.Column="1" Text="Dirección" Style="{StaticResource TxtBl1}" />
                            <TextBlock Grid.Column="2" Text="Teléfono" Style="{StaticResource TxtBl1}" />
                            <TextBlock Grid.Column="3" Text="Ubicación" Style="{StaticResource TxtBl1}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="WhatsApp" Style="{StaticResource TxtBl1}" HorizontalAlignment="Center"/>
                        </Grid>

                        <ItemsControl x:Name="FilasContainer">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="6" MinHeight="64">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Institucion}" 
                                                   Style="{StaticResource TxtBl1}" 
                                                   Grid.Column="0" 
                                                   TextWrapping="Wrap"
                                                   MaxWidth="200"
                                                   VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Direccion}" 
                                               Style="{StaticResource TxtBl1}" 
                                               Grid.Column="1" 
                                               TextWrapping="Wrap"
                                               MaxWidth="300"
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Telefono}" 
                                               Style="{StaticResource TxtBl1}"
                                               Grid.Column="2"
                                               TextWrapping="Wrap" 
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"/>

                                        <Button Grid.Column="3"
                                            Tag="{Binding LinkUbi}"
                                            Click="AbrirMapa_Click"
                                            Width="30" Height="30"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">

                                            <Image Source="/Imagenes/google-maps.png" Stretch="Uniform"/>
                                        </Button>

                                        <Button Grid.Column="4"
                                                Tag="{Binding LinkTelf}"
                                                Click="AbrirWhatsApp_Click"
                                                Width="30" Height="30"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding MostrarBotonWA, Converter={StaticResource BoolToVis}}">

                                            <Image Source="/Imagenes/whatsapp.png" Stretch="Uniform"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>