<Page x:Class="Front.CentrosMedicos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CentrosMedicos">
    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="MainBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#EFE8F6"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="BorderThickness" Value="6"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Visibility" Value="{Binding IsChecked, ElementName=Toggle, Converter={StaticResource BoolToVis}}"/>

        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Content" Value="CENTROS MÉDICOS"/>
            <Setter Property="FontSize" Value="64"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,10,0,6"/>

        </Style>

        <Style x:Key="ToggleStyle" TargetType="ToggleButton">
            <Setter Property="Content" Value="Centros de salud"/>
            <Setter Property="IsChecked" Value="True"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="TextBlock.Foreground" Value="#624695"/>
                </Trigger>
            </Style.Triggers>

        </Style>

        <Style x:Key="TxtBl1" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>

        </Style>

        <Style x:Key="BlankBorder1" TargetType="Border">
            <Setter Property="Height" Value="22"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Width" Value="220"/>

        </Style>

        <Style x:Key="BlankBorder2" TargetType="Border">
            <Setter Property="Height" Value="22"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="10,0"/>

        </Style>

        <Style x:Key="TxtBl2" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="Margin" Value="10,0"/>

        </Style>

        <Style x:Key="LabelBorder" TargetType="Border">
            <Setter Property="Background" Value="#7A2AC7"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="6,0"/>

        </Style>



    </Page.Resources>
    
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Stretch">

            <Label Style="{StaticResource LabelStyle}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="60,6,0,6">

            <ToggleButton x:Name="Toggle"
                          Style="{StaticResource ToggleStyle}">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <ContentPresenter 
            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </ToggleButton.Template>

            </ToggleButton>
        </StackPanel>

        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Margin="60,18,60,24">

            <Border Style="{StaticResource MainBorderStyle}">

                <StackPanel Orientation="Vertical">
                    <Grid Margin="4" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                            <Border Style="{StaticResource LabelBorder}">

                                <TextBlock x:Name="TxtBlNombre"
                                           Text="Nombre"
                                           Style="{StaticResource TxtBl1}"/>

                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <Border Style="{StaticResource LabelBorder}">

                                <TextBlock x:Name="TxtBlAtt"
                                           Text="Horario de atención"
                                           FontSize="14"
                                           Style="{StaticResource TxtBl1}"/>

                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <Border Style="{StaticResource LabelBorder}">

                                <TextBlock x:Name="TxtBlDir"
                                           Text="Dirección"
                                           Style="{StaticResource TxtBl1}"/>

                            </Border>
                        </StackPanel>
                    </Grid>



                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <Grid Margin="6" MinHeight="64">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Clinica de las Américas"
                                       Style="{StaticResource TxtBl2}"/>

                            <Border Grid.Column="1"
                                    Style="{StaticResource BlankBorder1}"/>

                            <Border Grid.Column="2"
                                    Style="{StaticResource BlankBorder2}"/>
                        </Grid>

                        <Grid Margin="6" MinHeight="64">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Clinica Foianini"
                                       Style="{StaticResource TxtBl2}"/>

                            <Border Grid.Column="1"
                                    Style="{StaticResource BlankBorder1}"/>

                            <Border Grid.Column="2"
                                    Style="{StaticResource BlankBorder2}"/>
                        </Grid>

                        <Grid Margin="6" MinHeight="64">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Hospital Obrero"
                                       Style="{StaticResource TxtBl2}"/>

                            <Border Grid.Column="1"
                                    Style="{StaticResource BlankBorder1}"/>

                            <Border Grid.Column="2"
                                    Style="{StaticResource BlankBorder2}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>


</Page>
