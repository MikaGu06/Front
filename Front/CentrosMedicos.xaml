<Page x:Class="Front.CentrosMedicos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="CentrosMedicos">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="MainBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#EFE8F6"/>
            <Setter Property="BorderBrush" Value="#222222"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16"/>
        </Style>

        <Style x:Key="PopupBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinWidth" Value="240"/>
        </Style>
        <Style x:Key="BotonAgrandable" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0D1B40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        CornerRadius="15"
                        Padding="{TemplateBinding Padding}"
                        RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1.12" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1.12" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#123066" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                     To="1" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                     To="1" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                    To="#0D1B40" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Content" Value="CENTROS MÉDICOS"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Margin" Value="0,10,0,6"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
        </Style>

        <Style x:Key="ToggleStyle" TargetType="ToggleButton">
            <Setter Property="Content" Value="Centros de salud"/>
            <Setter Property="Background" Value="#dae8fa"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>

            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#80000000" 
                                      BlurRadius="10" 
                                      ShadowDepth="6" 
                                      Opacity="0.35"/>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Foreground" Value="#624695"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TxtBl1" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#624695"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        </Style>

        <Style x:Key="TxtBl2" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
        </Style>

        <Style x:Key="CategoriaItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="Segoe UI Semilight"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="#072A4C"/>
            <Setter Property="Visibility" Value="Visible" />




            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="#624695"/>
                    <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">

                    <Setter Property="Foreground" Value="#624695"/>
                    <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
                </Trigger>
            </Style.Triggers>
        </Style>



    </Page.Resources>

    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Height="80" Margin="0,0,0,16" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Label Style="{StaticResource LabelStyle}"/>
            <Button Grid.Column="1" 
            Content="Volver" x:Name="BtnVolver"
            Style="{StaticResource BotonAgrandable}" 
            Width="120"
            Height="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Margin="0,25,30,0"
            Click="BtnVolver_Click"/>
        </Grid>


        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="60,6,0,6">


            <ToggleButton x:Name="Toggle"
                          Style="{StaticResource ToggleStyle}">
                <ToggleButton.Template>
                    <ControlTemplate TargetType="ToggleButton">
                        <ContentPresenter 
            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </ToggleButton.Template>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Categorías" FontFamily="Segoe UI Semilight"/>
                    <TextBlock Text="  ▾" FontFamily="Segoe UI Semilight" Margin="6,0,0,0"/>
                </StackPanel>
            </ToggleButton>


            <Popup IsOpen="{Binding IsChecked, ElementName=Toggle}"
                   PlacementTarget="{Binding ElementName=Toggle}"
                   Placement="Bottom"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Fade"
                   HorizontalOffset="0"
                   VerticalOffset="6">

                <Border Style="{StaticResource PopupBorderStyle}">
                    <ListBox x:Name="ListaCategorias"
             BorderThickness="0"
             Background="Transparent"
             SelectionMode="Single"
             ItemContainerStyle="{StaticResource CategoriaItemStyle}">
                        <!--Código para que se implemente en el backend-->
                        <!--SelectionChanged="ListaCategorias_SelectionChanged"-->

                        <ListBoxItem x:Name="FarmaciasItem">
                            <TextBlock Text="Farmacias"/>
                        </ListBoxItem>

                        <ListBoxItem x:Name="HospitalesItem">
                            <TextBlock Text="Hospitales"/>
                        </ListBoxItem>

                        <ListBoxItem x:Name="ClinicasItem">
                            <TextBlock Text="Clínicas"/>
                        </ListBoxItem>

                        <ListBoxItem x:Name="LaboratoriosItem">
                            <TextBlock Text="Laboratorios"/>
                        </ListBoxItem>

                        <ListBoxItem x:Name="ConsultoriosItem">
                            <TextBlock Text="Consultorios"/>
                        </ListBoxItem>

                    </ListBox>
                </Border>



            </Popup>
        </StackPanel>

        <!-- Aquí va el recuadro principal con la lista (igual que tu código original) -->
        <StackPanel Grid.Row="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Margin="60,18,60,24">

            <Border Style="{StaticResource MainBorderStyle}">
                <!-- ... contenido de lista (igual que en tu ejemplo), deja sin cambios -->
                <StackPanel Orientation="Vertical">
                    <Grid Margin="4" VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Left">
                            <Border>
                                <TextBlock x:Name="TxtBlNombre"
                                           Text="Nombre"
                                           Style="{StaticResource TxtBl1}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <Border>
                                <TextBlock x:Name="TxtBlAtt"
                                           Text="Institución"
                                           Style="{StaticResource TxtBl1}"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                            <Border>
                                <TextBlock x:Name="TxtBlDir"
                                           Text="Dirección"
                                           Style="{StaticResource TxtBl1}"/>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                            <Border>
                                <TextBlock x:Name="TxtTel"
                                           Text="Teléfono"
                                           Style="{StaticResource TxtBl1}"/>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- ejemplo de filas (igual que tu código) -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                        <Grid Margin="6" MinHeight="64">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Clinica de las Américas"
                                       Style="{StaticResource TxtBl2}"/>

                            <Border Grid.Column="1"/>

                            <Border Grid.Column="2"/>
                        </Grid>
                        <!-- ... más filas ... -->
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>