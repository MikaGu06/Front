<Page x:Class="Front.Medicamentos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Medicamentos">

    <!-- TIPOGRAFÍA GLOBAL -->
    <Page.Resources>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="ToggleButton">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>


        <!-- Botón blanco -->
        <Style x:Key="BotonRedondeado" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0D1B40"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border"
                    Background="{TemplateBinding Background}"
                    CornerRadius="15"
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#123066"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#09152D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        

        <!-- Botón Activo -->
        <Style x:Key="BotonEstado" TargetType="Button">
            <Setter Property="Background" Value="#8B45FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#8B45FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                      CornerRadius="8"
                      Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Iconos pequeños -->
        <Style x:Key="IconoPequeno" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Interruptor tipo switch -->
        <Style x:Key="InterruptorToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BaseToggle"
                          Background="#CCCCCC"
                          CornerRadius="12"/>

                            <Ellipse x:Name="BotonToggle"
                           Width="18" Height="18"
                           Fill="White"
                           Margin="2"
                           HorizontalAlignment="Left"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BaseToggle"
                              Property="Background"
                              Value="#4BAFF5"/>
                                <Setter TargetName="BotonToggle"
                              Property="HorizontalAlignment"
                              Value="Right"/>
                                <Setter TargetName="BotonToggle"
                              Property="Margin"
                              Value="0,2,2,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>


    <!-- Contenido con Scroll -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="16">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <!-- Encabezado -->
            <Border Grid.Row="0" Height="80" Margin="0,0,0,16" Background="Transparent">
                <TextBlock Text="RECORDATORIOS"
                 FontSize="40"
                 Foreground="#0A204A"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"/>
            </Border>


            <!-- Formulario -->
            <!-- Formulario dividido en 2 columnas -->
            <Grid Grid.Row="1" Margin="0,0,0,20" Grid.RowSpan="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna izquierda: formulario actual -->
                <Border Grid.Column="0" Background="White"
                    BorderBrush="#0A204A"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="18"
                    Margin="0,0,8,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="96*"/>
                            <ColumnDefinition Width="59*"/>
                            <ColumnDefinition Width="37*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock
                                Text="MEDICAMENTOS" FontSize="16">

                            </TextBlock>

                        </StackPanel>


                        <!-- Día -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,10,10,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                <TextBlock Text="Nombre" FontSize="16"/>
                            </StackPanel>
                            <TextBox Height="28"/>
                        </StackPanel>

                        <!-- Hora -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10,10,10,10" Grid.ColumnSpan="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                <TextBlock Text="Descripción"  FontSize="16"/>
                            </StackPanel>
                            <TextBox Height="28"/>
                        </StackPanel>

                        <!-- Medicamento -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10,10,10,10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                <TextBlock Text="Dosis" FontSize="16"/>
                            </StackPanel>
                            <TextBox Height="28"/>
                        </StackPanel>

                        
                        <!-- Botón Añadir -->
                        <Button Grid.Row="4" Grid.ColumnSpan="3"
                                Content="AÑADIR MEDICAMENTOS"
                                Height="36"
                                Margin="0,10,0,0"
                                Background="#0A204A"
                                Foreground="White"
                                BorderThickness="0"
                                >
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="8,2"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>

                <!-- Columna derecha recordatorio-->
                <Border Grid.Column="1" Background="White"
                        BorderBrush="#0A204A"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="18"
                        Margin="0,0,8,0">


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock
                                Text="HORARIOS" FontSize="16">

                            </TextBlock>

                        </StackPanel>


                        <!-- Día -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                <TextBlock Text="Día" FontSize="16"/>
                            </StackPanel>
                            <TextBox Height="28"/>
                        </StackPanel>

                        <!-- Hora -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                <TextBlock Text="Hora"  FontSize="16"/>
                            </StackPanel>
                            <ComboBox x:Name="cmbHoras"  Height="28" Background="White">
                                
                                <ComboBoxItem Content="2 horas" Tag="2"/>
                                <ComboBoxItem Content="4 horas" Tag="4"/>
                                <ComboBoxItem Content="6 horas" Tag="6"/>
                                <ComboBoxItem Content="8 horas" Tag="8"/>
                                <ComboBoxItem Content="12 horas" Tag="12"/>
                                <ComboBoxItem Content="16 horas" Tag="16"/>
                                <ComboBoxItem Content="24 horas" Tag="24"/>
                            </ComboBox>

                        </StackPanel>

                        <!-- Medicamento -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                <TextBlock Text="Medicamento" FontSize="16"/>
                            </StackPanel>
                            <TextBox Height="28"/>
                        </StackPanel>

                        
                        <!-- Botón Añadir -->
                        <Button Grid.Row="4" Grid.ColumnSpan="2"
                                Content="AÑADIR RECORDATORIO"
                                Height="36"
                                Margin="0,10,0,0"
                                Background="#0A204A"
                                Foreground="White"
                                BorderThickness="0"
                                >
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                    CornerRadius="8">
                                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="8,2"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                    </Grid>
                </Border>
            </Grid>



            <!-- Lista de Recordatorios -->
            <Border Grid.Row="3"
                  Background="White"
                  BorderBrush="#0A204A"
                  BorderThickness="2"
                  CornerRadius="10"
                  Padding="18" Margin="0,285,0,0" Grid.RowSpan="2">

                <StackPanel>

                    <TextBlock Text="RECORDATORIOS"
                     FontSize="20"
                     />

                    <TextBlock Text="Configura los días y horarios de Tomas"
                     FontSize="13"
                     Foreground="#555"
                     Margin="0,0,0,14"/>

                    <Border CornerRadius="10"
                          BorderBrush="#0A204A"
                          BorderThickness="2"
                          Padding="12">

                        <StackPanel>

                            <!-- Fila ejemplo -->
                            <Grid Margin="0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="160"/>
                                    <ColumnDefinition Width="180"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>

                                <ToggleButton Grid.Column="0"
                                    Style="{StaticResource InterruptorToggle}"
                                    IsChecked="True"
                                    HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                    <TextBlock Text="Lunes" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                    <TextBlock Text="Hoy - 07:00"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Orientation="Horizontal">
                                    <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                    <TextBlock Text="Jarabe"/>
                                </StackPanel>

                                <Button Grid.Column="4"
                              Content="Activo"
                              Width="90"
                              HorizontalAlignment="Right"
                              Style="{StaticResource BotonEstado}"/>
                            </Grid>

                        </StackPanel>

                    </Border>

                </StackPanel>

            </Border>

        </Grid>
    </ScrollViewer>
</Page>
