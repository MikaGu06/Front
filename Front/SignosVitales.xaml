<Page x:Class="Front.SignosVitales"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SignosVitales">


    <Page.Resources>

        <!-- TIPOGRAFÍA GLOBAL -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- TÍTULO PRINCIPAL -->
        <Style x:Key="TituloPrincipal" TargetType="TextBlock">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="Foreground" Value="#062354"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- ETIQUETAS -->
        <Style x:Key="EtiquetaCampo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- TEXTBOX -->
        <Style x:Key="EntradaTexto" TargetType="TextBox">
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- BOTÓN PRINCIPAL -->
        <Style x:Key="BotonPrincipal" TargetType="Button">
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#062354"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- HEADER HISTORIAL -->
        <Style x:Key="HeaderHistorial" TargetType="Border">
            <Setter Property="Background" Value="#9c27b0"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="2"/>
        </Style>

    </Page.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" HorizontalAlignment="Center">

            <!-- Formulario -->
            <StackPanel Width="750" Margin="0,40,0,0" HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image Source="Imagenes/Logo_corazon.png"
                           Width="70" Height="70"
                           Stretch="Uniform"
                           Margin="0,0,15,0"
                           />

                    <TextBlock Text="MI SALUD" Style="{StaticResource TituloPrincipal}"/>
                </StackPanel>


                <Border HorizontalAlignment="Center"
                        Padding="30"
                        Width="750"
                        Height="380"
                        CornerRadius="15"
                        BorderBrush="#0A0A0A"
                        BorderThickness="3">

                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- RITMO CARDÍACO -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Image Source="Imagenes/cora.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Añadir Ritmo Cardíaco" Style="{StaticResource EtiquetaCampo}"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource EntradaTexto}"/>
                        </StackPanel>

                        <!-- PRESIÓN ARTERIAL -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Image Source="Imagenes/cora.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Añadir Presión Arterial" Style="{StaticResource EtiquetaCampo}"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource EntradaTexto}"/>
                        </StackPanel>

                        <!-- OXIGENACIÓN -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Image Source="Imagenes/cora.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Añadir Oxigenación" Style="{StaticResource EtiquetaCampo}"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource EntradaTexto}"/>
                        </StackPanel>

                        <!-- TEMPERATURA -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Image Source="Imagenes/cora.png" Width="30" Height="30" Margin="0,0,10,0"/>
                                <TextBlock Text="Añadir Temperatura" Style="{StaticResource EtiquetaCampo}"/>
                            </StackPanel>
                            <TextBox Style="{StaticResource EntradaTexto}"/>
                        </StackPanel>

                        <!-- BOTÓN -->
                        <Button Grid.Row="2" Grid.ColumnSpan="2"
                                Content="Añadir"
                                Style="{StaticResource BotonPrincipal}"/>

                    </Grid>
                </Border>
            </StackPanel>


            <!-- Historial -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,0,0,40">
                <Border CornerRadius="10" Padding="20" Width="700">
                    <Border.Effect>
                        <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="4" Direction="270" BlurRadius="5"/>
                    </Border.Effect>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Image Source="Imagenes/Calendario.png" Width="50" Height="50" Margin="0,0,10,0"/>
                            <TextBlock Text="HISTORIAL" FontSize="18"  VerticalAlignment="Center" Foreground="#333333"/>
                        </StackPanel>

                        <Border Background="#E8EAF6" CornerRadius="5" Padding="5">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- ENCABEZADOS -->
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="0">
                                    <TextBlock Text="Día" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="1">
                                    <TextBlock Text="Hora" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="2">
                                    <TextBlock Text="Ritmo Cardíaco" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="3">
                                    <TextBlock Text="Presión arterial" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="4">
                                    <TextBlock Text="Oxigenación" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Style="{StaticResource HeaderHistorial}" Grid.Column="5">
                                    <TextBlock Text="Temperatura" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>

                                <!-- DATOS -->
                                <TextBlock Text="09-10-25" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="07:00" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="90" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="100-70" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="96" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="36" Grid.Row="1" Grid.Column="5" HorizontalAlignment="Center" Padding="0,5"/>

                                <TextBlock Text="09-10-25" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="07:00" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="90" Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="100-70" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="96" Grid.Row="2" Grid.Column="4" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="36" Grid.Row="2" Grid.Column="5" HorizontalAlignment="Center" Padding="0,5"/>

                                <TextBlock Text="09-10-25" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="07:00" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="90" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="100-70" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="96" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Center" Padding="0,5"/>
                                <TextBlock Text="36" Grid.Row="3" Grid.Column="5" HorizontalAlignment="Center" Padding="0,5"/>

                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>

</Page>
