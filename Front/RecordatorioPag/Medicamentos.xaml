<Page x:Class="Front.Medicamentos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Front.RecordatorioPag.ModelosR"

      
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Medicamentos">

    <Page.Resources>

        <!-- TIPOGRAFÍA GLOBAL -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <Style TargetType="ToggleButton">
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
        </Style>

        <!-- ComboBox -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="#dae8fa"/>
            <Setter Property="BorderBrush" Value="#dae8fa"/>
            <Setter Property="Foreground" Value="#002454"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display"/>
            <Setter Property="Padding" Value="10,0,10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>


        <!-- Botón agrandable (efecto hover) -->
        <Style x:Key="BotonAgrandable" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0D1B40"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="FontFamily" Value="Segoe UI Variable Display Semibold"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="15"
                                Padding="{TemplateBinding Padding}"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1.12" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1.12" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#123066" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleX)"
                                                             To="1" Duration="0:0:0.10"/>
                                            <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(ScaleTransform.ScaleY)"
                                                             To="1" Duration="0:0:0.10"/>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#0D1B40" Duration="0:0:0.10"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón Activo -->
        <Style x:Key="BotonEstado" TargetType="Button">
            <Setter Property="Background" Value="#8B45FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#8B45FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="10,4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Iconos pequeños -->
        <Style x:Key="IconoPequeno" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,6,0"/>
        </Style>

        <!-- Interruptor tipo switch -->
        <Style x:Key="InterruptorToggle" TargetType="ToggleButton">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BaseToggle"
                                    Background="#CCCCCC"
                                    CornerRadius="12"/>
                            <Ellipse x:Name="BotonToggle"
                                     Width="18" Height="18"
                                     Fill="White"
                                     Margin="2"
                                     HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BaseToggle" Property="Background" Value="#4BAFF5"/>
                                <Setter TargetName="BotonToggle" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="BotonToggle" Property="Margin" Value="0,2,2,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- Contenido con Scroll -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">

        <Grid Margin="16">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <Grid Grid.Row="0" Height="80" Margin="0,0,0,16" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <TextBlock Text="RECORDATORIOS"
               FontSize="40"
               Foreground="#0A204A"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Grid.Column="1"
               FontFamily="Segoe UI Variable Display Semibold"/>

               
                <Button Grid.Column="2"
                        Content="Volver"
                        x:Name="BtnVolver"
                        Style="{StaticResource BotonAgrandable}"
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="20,0,0,0"
                        Click="BtnVolver_Click"/>
                        </Grid>

            <!-- Formulario dividido en 2 columnas -->
            <Grid Grid.Row="1" Margin="0,0,0,20" Grid.RowSpan="3">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Columna izquierda: formulario actual -->
                <Border Grid.Column="0" Background="White"
                        BorderBrush="#0A204A"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="18"
                        Margin="0,0,8,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="96*"/>
                            <ColumnDefinition Width="59*"/>
                            <ColumnDefinition Width="37*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="MEDICAMENTOS" FontSize="16"/>
                        </StackPanel>

                        <!-- Nombre -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                <TextBlock Text="Nombre" FontSize="16"/>
                            </StackPanel>
                            <TextBox x:Name="txtNombreMed" Height="28"/>
                        </StackPanel>

                        <!-- Descripcion -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" Grid.ColumnSpan="2">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                <TextBlock Text="Descripción" FontSize="16"/>
                            </StackPanel>
                            <TextBox x:Name="txtDescMed" Height="28"/>
                        </StackPanel>

                        <!-- Dosis -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                <TextBlock Text="Dosis" FontSize="16"/>
                            </StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Cantidad -->
                                <TextBox x:Name="txtDosisMed" Height="28" Grid.Column="0" Margin="0,0,4,0" FontSize="16"/>

                                <!-- Unidad -->
                                <ComboBox x:Name="cmbDosisUnidad" Grid.Column="1" Height="28" FontSize="16"
                                    Style="{StaticResource ComboBoxStyle}" Cursor="">
                                    <ComboBoxItem Content="mg"/>
                                    <ComboBoxItem Content="g"/>
                                    <ComboBoxItem Content="ml"/>
                                </ComboBox>
                            </Grid>
                        </StackPanel>

                        <!-- Botón Añadir Medicamentos -->
                        <Button x:Name="btnAgregarMedicamento"
                                Grid.Row="4" Grid.ColumnSpan="3"
                                Content="AÑADIR MEDICAMENTOS"
                                Margin="0,10,0,0"
                                Style="{StaticResource BotonAgrandable}" 
                                Click="btnAgregarMedicamento_Click"/>
                    </Grid>
                </Border>

                <!-- Columna derecha recordatorio-->
                <Border Grid.Column="1" Background="White"
                        BorderBrush="#0A204A"
                        BorderThickness="2"
                        CornerRadius="10"
                        Padding="18"
                        Margin="0,0,8,0">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="HORARIOS" FontSize="16"/>
                        </StackPanel>

                        <!-- Día de inicio -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                <TextBlock Text="Día Inicio" FontSize="16"/>
                            </StackPanel>
                            <DatePicker x:Name="dpRecDia" Height="28" FontSize="16"
                                        FontFamily="Segoe UI Variable Display"/>
                        </StackPanel>

                        <!-- frecuencia-->
                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                <TextBlock Text="Frecuencia" FontSize="16"/>
                            </StackPanel>
                            <ComboBox Style="{StaticResource ComboBoxStyle}" x:Name="cmbRecFrecuencia">
                                <ComboBoxItem Content="2 horas" Tag="2"/>
                                <ComboBoxItem Content="4 horas" Tag="4"/>
                                <ComboBoxItem Content="6 horas" Tag="6"/>
                                <ComboBoxItem Content="8 horas" Tag="8"/>
                                <ComboBoxItem Content="12 horas" Tag="12"/>
                                <ComboBoxItem Content="16 horas" Tag="16"/>
                                <ComboBoxItem Content="24 horas" Tag="24"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Medicamento -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                <TextBlock Text="Medicamento" FontSize="16"/>
                            </StackPanel>
                            <!-- ComboBox editable para autocompletado -->
                            <ComboBox x:Name="cmbRecMedicamento"
                                  Height="28"
                                  FontSize="16"
                                  Style="{StaticResource ComboBoxStyle}"
                                  IsEditable="True"
                                  IsTextSearchEnabled="True"/>
                                            </StackPanel>

                        <!-- Hora inicio -->
                        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                <TextBlock Text="Hora Inicio" FontSize="16"/>
                            </StackPanel>
                            <TextBox x:Name="txtRecHoraInicio" Height="28"/>
                        </StackPanel>

                        <!-- Botón Añadir Recordatorio -->
                        <Button x:Name="btnAgregarRecordatorio"
                                Grid.Row="3" Grid.ColumnSpan="2"
                                Content="AÑADIR RECORDATORIO"
                                Margin="0,10,0,0"
                                Style="{StaticResource BotonAgrandable}" 
                                Click="Button_Click"/>

                    </Grid>
                </Border>
            </Grid>

            <!-- Lista de Recordatorios (igual que antes, no requiere botón agrandable) -->
            <Border Grid.Row="3"
                    Background="White"
                    BorderBrush="#0A204A"
                    BorderThickness="2"
                    CornerRadius="10"
                    Padding="18" Margin="0,285,0,0" Grid.RowSpan="2">

                <StackPanel>

                    <TextBlock Text="RECORDATORIOS"
                   FontSize="20"/>

                    <TextBlock Text="Configura los días y horarios de Tomas"
                           FontSize="13"
                           Foreground="#555"
                           Margin="0,0,0,14"/>

                    <Border CornerRadius="10"
                        BorderBrush="#0A204A"
                        BorderThickness="2"
                        Padding="12">

                        <!-- ItemsControl para mostrar recordatorios-->
                        <ItemsControl x:Name="RecordatoriosList" ItemsSource="{Binding ListaRecordatorios}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type local:Recordatorio}">

                                    <Grid Margin="0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="70"/>
                                            <!-- Toggle -->
                                            <ColumnDefinition Width="160"/>
                                            <!-- Fecha -->
                                            <ColumnDefinition Width="180"/>
                                            <!-- Hora -->
                                            <ColumnDefinition Width="*"/>
                                            <!-- Medicamento -->
                                            <ColumnDefinition Width="130"/>
                                            <!-- Frecuencia -->
                                            <ColumnDefinition Width="110"/>
                                            <!-- Botón -->
                                        </Grid.ColumnDefinitions>

                                        <!-- ToggleButton para activar/desactivar -->
                                        <ToggleButton Grid.Column="0"
                                          Style="{StaticResource InterruptorToggle}"
                                          IsChecked="{Binding Estado, Mode=TwoWay}"
                                          Checked="ToggleButton_Checked"
                                          Unchecked="ToggleButton_Unchecked"
                                          HorizontalAlignment="Center"/>

                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE787;"/>
                                            <TextBlock Text="{Binding Fecha, StringFormat=d}" FontWeight="Bold"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE121;"/>
                                            <TextBlock Text="{Binding Hora_inicio, StringFormat=t}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="3" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE95E;"/>
                                            <TextBlock Text="{Binding MedicamentoNombre}"/>
                                        </StackPanel>

                                        <!-- Nueva columna para frecuencia -->
                                        <StackPanel Grid.Column="4" Orientation="Horizontal">
                                            <TextBlock Style="{StaticResource IconoPequeno}" Text="&#xE823;"/>
                                            <TextBlock Text="{Binding FrecuenciaTexto}"/>
                                        </StackPanel>

                                        <!-- Botón de estado ahora en la columna 5 -->
                                        <Button Grid.Column="5"
                                            Content="{Binding EstadoBoton}"
                                            Width="90"
                                            HorizontalAlignment="Right"
                                            Style="{StaticResource BotonEstado}"/>
                                    </Grid>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </Border>

                </StackPanel>

            </Border>


            <!-- NOTIFICACIÓN TOAST -->
            <Grid x:Name="ToastHost"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,20,20,0"
                  Visibility="Collapsed"
                  Panel.ZIndex="9999">

                <Border x:Name="ToastCard"
                        Background="#0D1B40"
                        CornerRadius="12"
                        Padding="14"
                        Opacity="0"
                        RenderTransformOrigin="0.5,0.5">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="14"
                              ShadowDepth="3"
                              Opacity="0.45"/>
                    </Border.Effect>

                    <Border.RenderTransform>
                        <TranslateTransform x:Name="ToastTranslate" X="40"/>
                    </Border.RenderTransform>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                        <TextBlock Text="✔"
                       FontSize="20"
                       Margin="0,0,10,0"
                       Foreground="White"/>

                        <StackPanel>
                            <TextBlock x:Name="ToastTitle"
                           Text="Correcto"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="15"/>

                            <TextBlock x:Name="ToastMessage"
                           Text="Mensaje..."
                           Foreground="White"
                           FontSize="13"
                           TextWrapping="Wrap"
                           MaxWidth="260"/>
                        </StackPanel>

                        <Button Content="✕"
                            Width="24"
                            Height="24"
                            Margin="8,0,0,0"
                            VerticalAlignment="Top"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="White"
                            Click="BtnCerrarToast_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
            <!-- NOTIFICACIÓN BONITA -->
            <Border x:Name="NotificationPanel"
                    Background="#002454"
                    CornerRadius="12"
                    Padding="14"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,20,20,0"
                    Opacity="0"
                    Visibility="Collapsed"
                    RenderTransformOrigin="0.5,0.0">

                <Border.RenderTransform>
                    <TranslateTransform x:Name="NotifTransform" Y="-20"/>
                </Border.RenderTransform>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE946;" 
                   Style="{StaticResource IconoPequeno}"
                   Foreground="White"
                   FontSize="20"/>
                    <TextBlock x:Name="NotificationText"
                   Text="Texto de ejemplo"
                   Foreground="White"
                   FontSize="16"
                   Margin="8,0,0,0"
                   FontFamily="Segoe UI Variable Display Semibold"/>
                </StackPanel>
            </Border>


        </Grid>
    </ScrollViewer>
</Page>
